<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F3F3F3"
    tools:context=".cart">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".membership">

        <FrameLayout
            android:id="@+id/topframelayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_79sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:background="@drawable/navigation_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/cart_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="Cart"
                android:textColor="@color/black"
                android:textSize="@dimen/_21sdp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageBack"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_backarrow"
                android:tint="@color/black" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/logo_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_76sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:background="@drawable/navigation_bar"
            android:paddingTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Uniqlo Logo -->
            <ImageView
                android:id="@+id/uniqloLogo"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:contentDescription="Uniqlo Logo"
                android:scaleType="fitCenter"
                android:src="@drawable/uniqlo_logo" />
        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_150sdp"
            android:paddingLeft="@dimen/_10ssp"
            android:text="LOGIN"
            android:textColor="@color/black"
            android:textSize="@dimen/_27sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_160sdp"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            android:text="CREATE AN ACCOUNT"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/login_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_450sdp"
            android:layout_marginTop="@dimen/_200sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:background="@drawable/navigation_bar"
            android:paddingTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Top Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_10ssp"
                android:paddingLeft="@dimen/_10ssp"

                android:text="Log in with your email address and \npassword."
                android:textColor="#424141"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <FrameLayout
                android:id="@+id/info_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:paddingEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- Info Icon -->
                    <ImageView
                        android:id="@+id/ic_info"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:contentDescription="Info Icon"
                        android:src="@drawable/ic_info" />

                    <!-- Required Text -->
                    <TextView
                        android:id="@+id/required_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="Required*"
                        android:textColor="#00BCD4"
                        android:textSize="@dimen/_15sdp" />

                </LinearLayout>
            </FrameLayout>

            <!-- Email Input -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70sdp"
                android:paddingLeft="@dimen/_10ssp"
                android:text="EMAIL ADDRESS* "
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_90ssp"
                android:hint="Enter a valid email"
                android:padding="8dp"
                android:background="@drawable/loginunderline"
                android:paddingLeft="@dimen/_10ssp"
                android:textColor="#000000"
                android:textSize="@dimen/_18ssp"
                tools:ignore="HardcodedText" />

            <!-- Password Input -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_135sdp"
                android:paddingLeft="@dimen/_10ssp"
                android:text="PASSWORD*"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_150sdp"
                android:hint="Enter a valid password"
                android:padding="8dp"
                android:background="@drawable/loginunderline"
                android:textColor="#000000"
                android:textSize="@dimen/_20ssp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_190sdp"
                android:paddingLeft="@dimen/_10ssp"
                android:text="Password must be at least 8 characters, and contain \nboth letters and numbers. Only these symbols can be \nused -._@"
                android:textColor="#757575"
                android:textSize="@dimen/_10ssp"
                tools:ignore="HardcodedText" />

            <!-- Show Password Checkbox -->
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_230sdp"
                android:paddingLeft="@dimen/_10ssp"
                android:text="Show my password"
                android:textColor="#424141"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText" />


            <!-- Terms and Privacy -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_280sdp"
                android:layout_marginEnd="16dp"
                android:text="TERMS OF USE"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <!-- Black underline -->
            <View
                android:layout_width="@dimen/_85sdp"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_296sdp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_300sdp"
                android:layout_marginEnd="16dp"
                android:text="PRIVACY POLICY"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <!-- Black underline -->
            <View
                android:layout_width="@dimen/_97sdp"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_317sdp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/privacy_policy" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="@dimen/_290sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_350sdp"
                android:background="@drawable/loginsignupblackshape"
                android:gravity="center"
                app:backgroundTint="@color/black"
                android:text="LOG IN"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_125sdp"
                android:layout_marginTop="@dimen/_400sdp"
                android:gravity="end"
                android:text="FORGOT YOUR PASSWORD?"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="@dimen/_159sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_125sdp"
                android:layout_marginTop="@dimen/_420sdp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/privacy_policy" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="880dp"
            android:paddingLeft="@dimen/_10ssp"
            android:text="CREATE AN ACCOUNT"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/createAcccount_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <FrameLayout
            android:id="@+id/createAcccount_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp"
            android:layout_marginTop="932dp"
            android:background="@drawable/corner_shape"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:background="#F6F6F6"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">


                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15ssp"
                    android:text="If you create an account, you can get personalized services like checking purchase history and getting discount vouchers with your membership. Register today for free!"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp">

                </TextView>
                <!-- Create Account Button -->
                <Button
                    android:id="@+id/create_account_button"
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/loginsignupblackshape"
                    android:gravity="center"
                    android:padding="11dp"
                    android:text="CREATE AN ACCOUNT"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/black"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1132dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Horizontal Line -->
            <View
                android:layout_width="@dimen/_290sdp"
                android:layout_height="3dp"
                android:background="#D3D3D3" />

            <!-- Copyright Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:gravity="center"
                android:text="COPYRIGHT Â© UNIQLO CO., LTD. ALL RIGHTS RESERVED."
                android:textColor="#808080"
                android:textSize="@dimen/_10ssp" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
