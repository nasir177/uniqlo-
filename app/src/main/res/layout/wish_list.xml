<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDFFFEFE"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".wish_list">

    <FrameLayout
        android:id="@+id/topBarContainer"
        android:layout_width="@dimen/_320sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginBottom="609dp"
        android:background="@drawable/navigation_bar"
        android:paddingTop="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Notification Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25ssp"
            android:padding="@dimen/_12ssp"
            android:textColor="@color/black"
            android:text="WISH LIST"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold">

        </TextView>

        <!-- Item count Text-->

        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50ssp"
            android:layout_marginTop="@dimen/_60ssp"
            android:textColor="@color/black"
            android:text="0 ITEM(S)"
            android:textSize="15sp">

        </TextView>

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_100sdp"
            android:contentDescription="Cart Icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_notification_none"
            app:tint="@color/black" />

        <!-- Heart Icon -->
        <ImageView
            android:id="@+id/heartIcon"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_50sdp"
            android:contentDescription="Heart Icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_wishlist"
            app:tint="@color/black" />

        <!-- Notification Icon -->

        <ImageView
            android:id="@+id/cartIcon"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_8sdp"
            android:contentDescription="Notification Icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_cart_nonfilled"
            app:tint="@color/black" />
    </FrameLayout>

    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:background="@drawable/circle"
        android:contentDescription="Home Icon"
        android:scaleType="centerInside"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_120sdp"
        android:background="@drawable/circle"
        android:contentDescription="Search Icon"
        android:scaleType="centerInside"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/circle"
        android:contentDescription="Profile Icon"
        android:scaleType="centerInside"
        android:src="@drawable/ic_profile2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_160sdp"
        android:text="THERE ARE 0 ITEMS IN WISH LIST."
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/searchIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarContainer"
        app:layout_constraintVertical_bias="0.942" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19ssp"
        android:layout_marginBottom="@dimen/_103sdp"
        android:text="Add items to wish list and check prices and inventory information."
        android:textAlignment="center"
        android:textColor="#575555"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@+id/searchIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>